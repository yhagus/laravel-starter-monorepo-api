{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "laravel-starter-monorepo-api/common",
    "type": "project",
    "description": "The skeleton application for the Laravel framework.",
    "keywords": [
        "laravel",
        "framework"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "core/common": "*",
        "dedoc/scramble": "v0.13.9",
        "laravel/framework": "v12.44.0",
        "laravel/octane": "v2.13.3",
        "laravel/passport": "v13.4.2",
        "laravel/reverb": "1.6.3",
        "laravel/scout": "v10.23.0",
        "laravel/socialite": "v5.24.0",
        "league/flysystem-aws-s3-v3": "3.30.1",
        "nunomaduro/essentials": "1.0.1",
        "opcodesio/log-viewer": "3.21.1",
        "predis/predis": "3.3.0",
        "spatie/laravel-activitylog": "4.10.2",
        "spatie/laravel-data": "4.18.0",
        "spatie/laravel-medialibrary": "11.17.6",
        "spatie/laravel-permission": "6.24.0"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^3.6.1",
        "driftingly/rector-laravel": "^2.1.9",
        "fakerphp/faker": "^1.24.1",
        "larastan/larastan": "^3.8.1",
        "laravel/boost": "^1.8.7",
        "laravel/pail": "^1.2.4",
        "laravel/pint": "^1.26",
        "laravel/pulse": "1.4.7",
        "laravel/sail": "^1.51",
        "laravel/tinker": "^2.10.2",
        "mockery/mockery": "^1.6.12",
        "nunomaduro/collision": "^8.8.3",
        "pestphp/pest": "^4.2.0",
        "pestphp/pest-plugin-browser": "^4.1.1",
        "pestphp/pest-plugin-laravel": "^4.0.0",
        "pestphp/pest-plugin-type-coverage": "^4.0.3",
        "rector/rector": "^2.3.0"
    },
    "autoload": {
        "psr-4": {
            "App\\Admin\\": "apps/admin/app/",
            "App\\Customer\\": "apps/customer/app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Admin\\Tests\\": "apps/admin/tests/",
            "Customer\\Tests\\": "apps/customer/tests/"
        }
    },
    "scripts": {
        "artisan:admin": "@php apps/admin/artisan",
        "artisan:customer": "@php apps/customer/artisan",
        "pint:admin": "pint apps/admin",
        "pint:customer": "pint apps/customer",
        "rector:admin": "rector process apps/admin",
        "rector:customer": "rector process apps/customer",
        "phpstan:admin": "phpstan analyse apps/admin",
        "phpstan:customer": "phpstan analyse apps/customer",
        "lint:admin": [
            "@pint:admin",
            "@rector:admin"
        ],
        "lint:customer": [
            "@pint:customer",
            "@rector:customer"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php apps/admin/artisan package:discover --ansi",
            "@php apps/customer/artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php apps/admin/artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php apps/customer/artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php apps/admin/artisan clear",
            "@php apps/customer/artisan clear",
            "@update:requirements"
        ],
        "update:requirements": [
            "composer bump"
        ],
        "test:types": "phpstan",
        "test:admin": "vendor/bin/pest -c apps/admin/phpunit.xml",
        "test:customer": "vendor/bin/pest -c apps/customer/phpunit.xml"
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "common",
            "options": {
                "symlink": true
            }
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true
}
